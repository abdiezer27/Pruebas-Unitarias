import os
import zipfile

# Crear estructura de carpetas
os.makedirs('proyecto/app', exist_ok=True)
os.makedirs('proyecto/tests', exist_ok=True)

# Crear calculadora.py
calculadora_code = """
# app/calculadora.py

def suma(a, b):
    \"\"\"Suma dos n煤meros.\"\"\"
    return a + b

def division(a, b):
    \"\"\"Divide dos n煤meros.\"\"\"
    if b == 0:
        raise ValueError("No se puede dividir entre cero")
    return a / b
"""

with open('proyecto/app/calculadora.py', 'w') as f:
    f.write(calculadora_code)

# Crear test_calculadora.py
test_code = """
# tests/test_calculadora.py
import pytest
from app.calculadora import suma, division

# Caso de Uso 1: Pruebas para la funci贸n suma
def test_suma_positivos():
    \"\"\"Prueba la suma de n煤meros positivos.\"\"\"
    assert suma(5, 3) == 8

def test_suma_negativos():
    \"\"\"Prueba la suma de n煤meros negativos.\"\"\"
    assert suma(-2, -4) == -6

def test_suma_mixtos():
    \"\"\"Prueba la suma de n煤meros positivos y negativos.\"\"\"
    assert suma(-2, 5) == 3

# Caso de Uso 2: Pruebas para la funci贸n divisi贸n
def test_division_valida():
    \"\"\"Prueba la divisi贸n de dos n煤meros.\"\"\"
    assert division(10, 2) == 5.0

def test_division_negativos():
    \"\"\"Prueba la divisi贸n de n煤meros negativos.\"\"\"
    assert division(-10, -2) == 5.0

def test_division_por_cero():
    \"\"\"Prueba la divisi贸n por cero (debe lanzar ValueError).\"\"\"
    with pytest.raises(ValueError, match="No se puede dividir entre cero"):
        division(10, 0)
"""

with open('proyecto/tests/test_calculadora.py', 'w') as f:
    f.write(test_code)

